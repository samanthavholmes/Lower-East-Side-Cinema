<h1 class= "page-title">Login</h1>

<%= bootstrap_form_for(:session, url: login_path) do |f| %><!-- Creates the form for a session login -->
  <% if @errors %>
    <div id="error_explanation">
    <h2><%= pluralize(@errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @errors.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit 'Login' %>
  </div>
<% end %>
