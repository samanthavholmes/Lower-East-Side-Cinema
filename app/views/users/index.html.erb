<h2 class = "page-title">Meet the Judges</h2>
<section id="judges-index">


<% @judges.in_groups_of(3) do |judge1, judge2, judge3| %>
  <div class="row">
    <div class="col-md-4">
      <img class="judge_pictures"src="<%= judge1.picture %>"><br>
      <%= link_to judge1.first_name + " " + judge1.last_name, user_path(judge1) %>
    </div>
    <div class="col-md-4">
      <img class="judge_pictures"src="<%= judge2.picture %>"><br>
      <%= link_to judge2.first_name + " " + judge2.last_name, user_path(judge2) %>
    </div>
    <div class="col-md-4">
      <img class="judge_pictures"src="<%= judge3.picture %>"><br>
      <%= link_to judge3.first_name + " " + judge3.last_name, user_path(judge3) %>
    </div>
<% end %>
</section>
